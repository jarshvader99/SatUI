
@{
    ViewBag.Title = "Contact Confirmation";
}

<h2>@ViewBag.Title</h2>

<div class="confirmMessage">
    <div class="row" data-aos="fade-up" data-aos-anchor-placement="bottom-bottom" data-aos-duration="1000">
        <div class="col-sm-12">
            <!-- response message, only visible if message is sent successfully. -->
            <h2 id="confirmText">
                Thanks for contacting me, @Model.Name! I will get back to you as soon as possible.
            </h2>
        </div>
    </div>
</div>


