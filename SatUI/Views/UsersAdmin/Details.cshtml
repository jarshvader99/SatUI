@model SatUI.Models.ApplicationUser

@{
    ViewBag.Title = "Details";
}



<div class="pageWrap">

    @{
        var color = "";
        switch (Model.EmailConfirmed)
        {
            case true:
                color = "#7cbb00";
                break;
            //case "IsGraduated":
            //    color = "#ffbb00";
            //    break;
            //case "IsTakingBreak":
            //    color = "#a903b3";
            //    break;

            default:
                break;

        }

        <div class="col-lg-9">
            <div class="well well-primary box" style="background-color:@color">
                <div>
                    <h4>User</h4>
                    <hr />
                    <ul class="dl-horizontal">
                        <li>
                            @Html.DisplayNameFor(model => model.UserName)
                        </li>
                        <li>
                            @Html.DisplayFor(model => model.UserName)
                        </li>
                    </ul>
                </div>
                <h4>List of roles for this user</h4>
                @if (ViewBag.RoleNames.Count == 0)
            {
                    <hr />
                    <p>No roles found for this user.</p>
                }

                <div>

                    @foreach (var item in ViewBag.RoleNames)
                    {
                        <ul>
                            <li>
                                @item
                            </li>
                        </ul>
                    }
                </div>
                <p>
                    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
                    @Html.ActionLink("Back to List", "Index")
                </p>
            </div>
        </div>
    }
</div>
