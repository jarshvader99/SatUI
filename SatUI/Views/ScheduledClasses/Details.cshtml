@model Sat.Data.EF.ScheduledClass

@{
    ViewBag.Title = "Details";
}

<div class="pageWrap">
    <h2>@ViewBag.Title</h2>
    @{
        var color = "";
        switch (Model.ScheduledClassID)
        {
            case 1:
                color = "#7cbb00";
                break;
            case 2:
                color = "#ffbb00";
                break;
            case 7:
                color = "#a903b3";
                break;
            case 8:
                color = "#ec4f13";
                break;

        }

        <div class="col-lg-9">
            <div class="well well-primary box" style="background-color:@color">
                <h4>Class Details</h4>
                <hr />
                <ul class="dl-horizontal">
                    <li class="detailTitle">
                        @Html.DisplayNameFor(model => model.InstructorName)
                    </li>

                    <li>
                        @Html.DisplayFor(model => model.InstructorName)
                    </li>

                    <li class="detailTitle">
                        @Html.DisplayNameFor(model => model.Location)
                    </li>

                    <li>
                        @Html.DisplayFor(model => model.Location)
                    </li>

                    <li class="detailTitle">
                        @Html.DisplayNameFor(model => model.StartDate)
                    </li>

                    <li>
                        @Html.DisplayFor(model => model.StartDate)
                    </li>

                    <li class="detailTitle">
                        @Html.DisplayNameFor(model => model.EndDate)
                    </li>

                    <li>
                        @Html.DisplayFor(model => model.EndDate)
                    </li>

                    <li class="detailTitle">
                        @Html.DisplayNameFor(model => model.EnrollmentMax)
                    </li>

                    <li>
                        @Html.DisplayFor(model => model.EnrollmentMax)
                    </li>

                    <li class="detailTitle">
                        @Html.DisplayNameFor(model => model.Cours.CourseName)
                    </li>

                    <li>
                        @Html.DisplayFor(model => model.Cours.CourseName)
                    </li>

                </ul>
            </div>
        </div>
        <p>
            @Html.ActionLink("Edit", "Edit", new { id = Model.ScheduledClassID }) |
            @Html.ActionLink("Back to List", "Index")
        </p>
    }
</div>
